    "body": {
      "type": "Slices",
      "fieldset": "Slice zone",
      "config": {
        "labels": {},
        "choices": {
          "projects": {
            "type": "Slice",
            "fieldset": "Projects",
            "description": "Yfirlit verkefna",
            "icon": "accessibility",
            "display": "list",
            "non-repeat": {},
            "repeat": {
              "project": {
                "type": "Link",
                "config": {
                  "select": "document",
                  "customtypes": ["project"],
                  "label": "Project"
                }
              }
            }
          },
          "rich_text": {
            "type": "Slice",
            "fieldset": "Rich Text",
            "description": "Add headings, paragraphs, links, bullet lists.",
            "icon": "text_fields",
