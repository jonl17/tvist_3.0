      "type": "UID",
      "config": {
        "label": "UID"
      }
    },
    "title": {
      "type": "Text",
      "config": {
        "label": "Title"
      }
    },
    "description": {
      "type": "StructuredText",
      "config": {
        "multi": "paragraph,strong,em,hyperlink,list-item,o-list-item",
        "allowTargetBlank": true,
        "label": "Description"
      }
    },
    "theme": {
      "type": "Select",
      "config": {
        "options": ["white", "pink", "red"],
        "default_value": "white",
