            "repeat": {}
          },
          "project_groups": {
            "type": "Slice",
            "fieldset": "Project groups",
            "description": "Add project groups",
            "icon": "group_work",
            "display": "list",
            "non-repeat": {},
            "repeat": {
              "group": {
                "type": "Link",
